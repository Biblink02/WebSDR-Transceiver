- name: epy_block_0
  id: epy_block
  parameters:
    _source_code: "import numpy as np\nfrom gnuradio import gr\nimport zmq\n\nclass\
      \ blk(gr.sync_block):\n    \"\"\"\n    Replaces zeromq_pub_sink. Sends I/Q data\
      \ only when active=True.\n    \"\"\"\n    def __init__(self, active=True, iq_port=5000):\n\
      \        gr.sync_block.__init__(\n            self,\n            name='ZMQ Conditional\
      \ Publisher',\n            in_sig=[np.complex64],\n            out_sig=None\n\
      \        )\n        self.active = active\n        self.port = iq_port\n\n  \
      \      self.context = zmq.Context()\n        self.socket = self.context.socket(zmq.PUB)\n\
      \        self.socket.bind(f\"tcp://0.0.0.0:{self.port}\")\n\n    def set_active(self,\
      \ active):\n        \"\"\"Setter used by the control thread.\"\"\"\n       \
      \ self.active = active\n\n    def work(self, input_items, output_items):\n \
      \       in0 = input_items[0]\n        n = len(in0)\n\n        if not self.active:\n\
      \            return n\n\n        if n > 0:\n            try:\n             \
      \   self.socket.send(in0.tobytes())\n            except Exception as e:\n  \
      \              print(f\"[SDR-ZMQ] Error sending data: {e}\")\n\n        return\
      \ n\n"
    active: is_active
    affinity: ''
    alias: ''
    comment: ''
    iq_port: sdr_iq_port
    maxoutbuf: '0'
    minoutbuf: '0'
  states:
    _io_cache: ('ZMQ Conditional Publisher', 'blk', [('active', 'True'), ('iq_port',
      '5000')], [('0', 'complex', 1)], [], '\nReplaces zeromq_pub_sink. Sends I/Q
      data only when active=True.\n', ['active'])
